{
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "double"]
    },
    "globals": {
        "module": true,
        "process": true,
        "require": true,
        "console": true
    },
    "ignorePatterns": [
        "node_modules/", 
        "allure-report/",
        "allure-results/",
        "playwright-report/",
        "test-results"
    ]
  }